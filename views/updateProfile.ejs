<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>

  <body>
    <div class="container">
      <%- include("partials/student-nav")%>
        <main>
          <%- include("partials/searchBar")%>

            <h1>
              <%= title %>
            </h1>
            <div class="content">
              <form action="/student/update-profile" method="post">
                <label for="firstname">First Name</label>
                <br>
                <input disabled type="text" name="firstname" id="" value="<%= profile.firstname || ''%>">
                <br><br>

                <label for="lastname">Last Name</label>
                <br>
                <input disabled type="text" name="lastname" id="" value="<%= profile.lastname || ''%>">
                <br><br>
                <label for="program">Program</label>
                <br>
                <input disabled type="text" name="program" id="" value="<%= profile.abbreviation || ''%>">
                <br><br>

                <label for="gender">Gender</label>
                <br>
                Male <input type="radio" name="gender" value="M" required id="gender_male" <%=profile.gender==='M'
                  ? 'checked' : '' %>>
                Female <input type="radio" name="gender" value="F" required id="gender_female" <%=profile.gender==='F'
                  ? 'checked' : '' %>>
                <br><br>

                <h1>Next of Kin</h1>
                <label for="nk_full_name">Full Name:</label>
                <br>
                <input type="text" id="full_name" name="nk_full_name" value="<%= profile.nk_full_name || ''%>" required>
                <br><br>

                <label for="nk_relationship">Relationship:</label><br>
                <input type="text" id="relationship" name="nk_relationship" value="<%= profile.nk_relationship || ''%>"
                  required>
                <br><br>

                <label for="nk_phone_number">Phone Number:</label><br>
                <input type="text" id="phone_number" name="nk_phone_number" value="<%= profile.nk_phone_number || ''%>">
                <br><br>

                <label for="nk_email">Email:</label><br>
                <input type="email" id="email" name="nk_email" value="<%= profile.nk_email || ''%>">

                <br><br>
                <input type="submit" value="Update Info" id="">
              </form>

            </div>


        </main>


    </div>

  </body>

</html>